# ====== Core ======
KEY=your-random-key-here
SECRET=your-random-secret-here
LOG_LEVEL=info
TELEMETRY=false

# Porta interna da API
PORT=8055
PUBLIC_URL=http://localhost:8055

# Seeding
DEBUG=1
SEED_SINGERS_COUNT=5
SEED_CLIENTS_COUNT=20
SEED_ONLINE_LIVES=3
APPLY_PERMISSIONS=true

# Domínio e senha dos usuários criados
SEED_DOMAIN=gmail.com
SEED_USER_PASSWORD=123456

# Quantidades (padrão 5 cantores / 20 clientes)
SEED_SINGERS_COUNT=5
SEED_CLIENTS_COUNT=20
SEED_ONLINE_LIVES=3
SEED_SUPERCHAT=true

# ======================
# Database (PostgreSQL)
# ======================
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=batepalco_dev
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_SSL=false

# ======================
# Cache / Queue (Redis)
# ======================
CACHE_ENABLED=true
CACHE_STORE=redis
REDIS=redis://default:your-redis-password@localhost:6379/0

# ======================
# Auth
# ======================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password

# Tokens JWT (Auth)
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# ======================
# CORS / Segurança
# ======================
CORS_ENABLED=true
CORS_ORIGIN=true
CORS_METHODS=GET,POST,PATCH,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ====== Auth Providers ======
AUTH_PROVIDERS=google
AUTH_GOOGLE_ALLOW_PUBLIC_REGISTRATION=true
AUTH_GOOGLE_DRIVER=openid
AUTH_GOOGLE_CLIENT_ID=your-google-client-id
AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
AUTH_GOOGLE_ISSUER_URL=https://accounts.google.com/.well-known/openid-configuration
AUTH_GOOGLE_PROFILE_URL=https://www.googleapis.com/oauth2/v3/userinfo
AUTH_GOOGLE_SCOPE="openid email profile"
AUTH_GOOGLE_IDENTIFIER_KEY=email
AUTH_GOOGLE_MODE=session
AUTH_GOOGLE_REDIRECT_ALLOW_LIST=http://localhost:3000/auth/callback,http://localhost:8055/auth/callback
AUTH_GOOGLE_ICON=google
AUTH_GOOGLE_LABEL=Google
AUTH_GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback
AUTH_GOOGLE_SYNC_USER_INFO=true
AUTH_GOOGLE_DEFAULT_ROLE_ID=your-default-role-id

STORAGE_LOCATIONS=local
STORAGE_LOCAL_DRIVER=local
STORAGE_LOCAL_ROOT=./uploads